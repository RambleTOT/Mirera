<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="-65dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginHorizontal="40dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="28sp"
                            android:textColor="@color/color_text_main"
                            android:text="@string/textSettingsTitle"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:fontFamily="@font/open_sans"/>

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="65dp">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/layoutChangeCamera"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/color_edit_text"
                                app:cardCornerRadius="20dp"
                                android:layout_marginHorizontal="25dp"
                                android:layout_marginTop="30dp"
                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginVertical="15dp"
                                    android:layout_marginHorizontal="15dp">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/icon_camera"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="22sp"
                                        android:textColor="@color/color_text_second"
                                        android:text="@string/textSettingsCamera"
                                        android:textStyle="bold"
                                        android:gravity="left|center"
                                        android:paddingVertical="10dp"
                                        android:layout_marginHorizontal="5dp"
                                        android:fontFamily="@font/open_sans"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/layoutChangeMirror"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/color_edit_text"
                                app:cardCornerRadius="20dp"
                                android:layout_marginHorizontal="25dp"
                                android:layout_marginTop="20dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginVertical="15dp"
                                    android:layout_marginHorizontal="15dp">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/icon_mirror"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="22sp"
                                        android:textColor="@color/color_text_second"
                                        android:text="@string/textSettingsMirror"
                                        android:textStyle="bold"
                                        android:gravity="left|center"
                                        android:paddingVertical="10dp"
                                        android:layout_marginHorizontal="5dp"
                                        android:fontFamily="@font/open_sans"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/layoutChangeData"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/color_edit_text"
                                app:cardCornerRadius="20dp"
                                android:layout_marginHorizontal="25dp"
                                android:layout_marginTop="20dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginVertical="15dp"
                                    android:layout_marginHorizontal="15dp">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/icon_da"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="22sp"
                                        android:textColor="@color/color_text_second"
                                        android:text="@string/textSettingsData"
                                        android:textStyle="bold"
                                        android:gravity="left|center"
                                        android:paddingVertical="10dp"
                                        android:layout_marginHorizontal="5dp"
                                        android:fontFamily="@font/open_sans"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/layoutInformation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/color_edit_text"
                                app:cardCornerRadius="20dp"
                                android:layout_marginHorizontal="25dp"
                                android:layout_marginTop="30dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginVertical="15dp"
                                    android:layout_marginHorizontal="15dp">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/icon_info"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="22sp"
                                        android:textColor="@color/color_text_second"
                                        android:text="@string/textSettingsInfo"
                                        android:textStyle="bold"
                                        android:gravity="left|center"
                                        android:paddingVertical="10dp"
                                        android:layout_marginHorizontal="5dp"
                                        android:fontFamily="@font/open_sans"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/layoutHelp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/color_edit_text"
                                app:cardCornerRadius="20dp"
                                android:layout_marginHorizontal="25dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginVertical="15dp"
                                    android:layout_marginHorizontal="15dp">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/icon_help"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="22sp"
                                        android:textColor="@color/color_text_second"
                                        android:text="@string/textSettingsHelp"
                                        android:textStyle="bold"
                                        android:gravity="left|center"
                                        android:paddingVertical="10dp"
                                        android:layout_marginHorizontal="5dp"
                                        android:fontFamily="@font/open_sans"/>

                        </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    </ScrollView>

                </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>